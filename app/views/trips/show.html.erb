<h2>Trip Details</h2>

<ul id="trip-list">
<li class="trip-details">

<span id="name"><h2>Trip <%= @trip.id %></h2></span>
<span>Driver</span>
<span>Passenger</span>
<span>Rating</span>
<span>Cost</span>
<span></span>
<span></span>

<span><%= link_to Driver.find_by(id: @trip.driver_id).name, driver_path(@trip.driver_id) %></span>
<span><%= link_to Passenger.find_by(id: @trip.passenger_id).name, passenger_path(@trip.passenger_id) %></span>
<span><%= @trip.rating %></span>
<span><%= @trip.cost %></span>
<span><%= link_to "Edit", edit_trip_path(@trip.id) %></span>
<span><%= link_to "Delete", trip_path(@trip.id), method: :delete, data: { confirm: "Are you sure you want to delete this trip?" } %></span>

</li>
</ul>